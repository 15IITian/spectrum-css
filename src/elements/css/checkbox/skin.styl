@import 'abstract/components/checkbox/skin.styl'

.spectrum-Checkbox-label {
  spectrum-checkbox-label()
}

.spectrum-Checkbox-checkmark {
  spectrum-checkbox-checkmark()
}

.spectrum-Checkbox-input {
  &:checked + .spectrum-Checkbox-checkmark {
    spectrum-checkbox-checkmark--checked()
  }

  &:focus + .spectrum-Checkbox-checkmark {
    spectrum-checkbox-checkmark--focus()
  }
}
/*! topdoc
{{ checkbox-default-topdoc }}
*/
.spectrum-Checkbox {
  &:hover {
    .spectrum-Checkbox-checkmark {
      spectrum-checkbox-checkmark--hover()
    }
  }

  &:active {
    .spectrum-Checkbox-checkmark {
      spectrum-checkbox-checkmark--active()
    }
  }

/*! topdoc
{{ checkbox-disabled-topdoc }}
*/
  &[disabled] {
    .spectrum-Checkbox-checkmark {
      spectrum-checkbox-checkmark--disabled()
    }

    .spectrum-Checkbox-label {
      spectrum-checkbox-label--disabled()
    }
  }
}
