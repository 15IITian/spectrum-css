@import '@spectrum/spectrum-abstract-stylus/dist/components/tab/skin.styl'


/*! topdoc
{{ tab-default-topdoc }}
*/
.spectrum-Tab {
  .spectrum-Tab-label {
    spectrum-tab-label-default()
  }

  &:hover {
    .spectrum-Tab-label {
      spectrum-tab-label-hover()
    }
  }

  &:focus {
    .spectrum-Tab-label {
      spectrum-tab-label-focus()
    }
  }

  &.is-selected {
    .spectrum-Tab-label {
      spectrum-tab-label-active()
    }
  }

  &[disabled] {
    .spectrum-Tab-label {
      spectrum-tab-label-disabled()
    }
  }
}

.spectrum-TabList--anchored {
  spectrum-tablist--anchored()

  .spectrum-Tab {

    .spectrum-Tab-label {
      spectrum-tab-anchored-label-default()
    }

    &:hover .spectrum-Tab-label {
      spectrum-tab-anchored-label-hover()
    }

    &:active .spectrum-Tab-label,
    &.is-selected .spectrum-Tab-label {
      spectrum-tab-anchored-label-active()
    }

    &:focus .spectrum-Tab-label {
      spectrum-tab-anchored-label-focus()
    }

    &:disabled  .spectrum-Tab-label,
    &[disabled] .spectrum-Tab-label {
      spectrum-tab-anchored-label-disabled()
    }

  }
}
