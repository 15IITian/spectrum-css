@import '@spectrum/spectrum-abstract-stylus/dist/components/radio/skin.styl'

.spectrum-Radio-input {
  spectrum-radio-input()

  &:checked + .spectrum-Radio-checkmark {
    spectrum-radio-checkmark--checked()
  }

  &:focus + .spectrum-Radio-checkmark {
    spectrum-radio-checkmark--focus()
  }

  &:disabled {
    spectrum-radio-checkmark--disabled()
  }

  &:disabled ~ .spectrum-Radio-label {
    spectrum-radio-label--disabled()
  }


  /*! topdoc
  {{ radio-required-topdoc }}
  */
  &:invalid {
    & + .spectrum-Radio-checkmark {
      border-color: $spectrum-switch-invalid-border-color-default;
    }

    & ~ .spectrum-Radio-label {
      color: $spectrum-switch-invalid-border-color-default;
    }
  }

  &:invalid:hover {
    & + .spectrum-Radio-checkmark {
      border-color: $spectrum-switch-invalid-border-color-hover;
    }

    & ~ .spectrum-Radio-label {
      color: $spectrum-switch-invalid-border-color-hover;
    }
  }

  &:invalid:active {
    & + .spectrum-Radio-checkmark {
      border-color: $spectrum-switch-invalid-border-color-active;
    }

    & ~ .spectrum-Radio-label {
      color: $spectrum-switch-invalid-border-color-active;
    }
  }
}


/*! topdoc
{{ radio-default-topdoc }}
*/
.spectrum-Radio {

  .spectrum-Radio-label {
    spectrum-radio-label()
  }

  .spectrum-Radio-checkmark {
    spectrum-radio-checkmark()
  }

  &:hover {
    .spectrum-Radio-checkmark {
      spectrum-radio-checkmark--hover()
    }

    .spectrum-Radio-label {
      spectrum-radio-label--hover()
    }
  }

  &:active {
    .spectrum-Radio-checkmark {
      spectrum-radio-checkmark--active()
    }

    .spectrum-Radio-label {
      spectrum-radio-label--active()
    }
  }

/*! topdoc
{{ radio-disabled-topdoc }}
*/
  &[disabled] {
    .spectrum-Radio-checkmark {
      spectrum-radio-checkmark--disabled()
    }

    .spectrum-Radio-label {
      spectrum-radio-label--disabled()
    }
  }
}
