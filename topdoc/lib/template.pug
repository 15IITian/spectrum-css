doctype html
html
  head
    meta(charset = 'utf-8')
    meta('http-equiv' = 'X-UA-Compatible', content = 'IE=edge,chrome=1')
    title Spectrum CSS - Documentation
    meta(name="viewport", content="user-scalable=no,initial-scale = 1.0,maximum-scale = 1.0")

    link(rel='stylesheet', type='text/css', href='css/vendor/rainbow.css')
    link(rel='stylesheet', type='text/css', href='css/vendor/flexboxgrid.css')
    link(rel='stylesheet', type='text/css', href='css/docs.css')
    link(rel='stylesheet', type='text/css', href='../icons/spectrum-icons.css')
    link(rel='stylesheet', type='text/css', href='../spectrum-core.css', data-spectrum-core)
    link(rel='stylesheet', type='text/css', href='', data-spectrum-core-diff)
    link(rel='stylesheet', type='text/css', href='../spectrum-darkest.css')
    link(rel='stylesheet', type='text/css', href='../spectrum-dark.css')
    link(rel='stylesheet', type='text/css', href='../spectrum-light.css')
    link(rel='stylesheet', type='text/css', href='../spectrum-lightest.css')

    script(src='../icons/AS.loadIcons.js')
    script(src='js/docs.js')

    script.
      !{frPolyfill}

  body.u-sdldocs-clearfix.spectrum.spectrum--light
    div.spectrum-Underlay#spectrum-underlay
    header.sdldocs-header
      h2.spectrum-Heading--pageTitle
        a.sdldocs-header-link(href='http://spectrum.corp.adobe.com')
          img.sdldocs-header-logo-image(src='img/spectrum_logo_light.svg', alt='Adobe Spectrum Logo')
        span.sdldocs-header-title.
          spectrum-css #{pkg.version}
      div.sdldocs-badge
        div.sdldocs-badge-label.
          Spectrum
        div.sdldocs-badge-version.
          #{pkg.devDependencies['@spectrum/spectrum-dna']}

    div.sdldocs-floating
      form(class="spectrum-Form")
        div(class="spectrum-Form-item")
          label.spectrum-Form-itemLabel.spectrum-FieldLabel--right Colorstop
          div.spectrum-Form-itemField
            div.spectrum-FieldGroup.spectrum-FieldGroup--vertical
              div.spectrum-Radio(onclick="changeCSS('lightest')")
                input.spectrum-Radio-input(type="radio" name="colorStop" class="" id="radio-lightest")
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-lightest") Lightest
              div.spectrum-Radio(onclick="changeCSS('light')")
                input.spectrum-Radio-input(type="radio" name="colorStop" class="" id="radio-light" checked)
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-light") Light
              div.spectrum-Radio(onclick="changeCSS('dark')")
                input.spectrum-Radio-input(type="radio" name="colorStop" class="" id="radio-dark")
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-dark") Dark
              div.spectrum-Radio(onclick="changeCSS('darkest')")
                input.spectrum-Radio-input(type="radio" name="colorStop" class="" id="radio-darkest")
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-darkest") Darkest

        div(class="spectrum-Form-item")
          label.spectrum-Form-itemLabel.spectrum-FieldLabel--right Scale
          div.spectrum-Form-itemField
            div.spectrum-FieldGroup.spectrum-FieldGroup--vertical
              div.spectrum-Radio(onclick="changeScale('medium')")
                input.spectrum-Radio-input(type="radio" name="scalingSize" class="" id="radio-medium" checked)
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-medium") Medium
              div.spectrum-Radio(onclick="changeScale('large')")
                input.spectrum-Radio-input(type="radio" name="scalingSize" class="" id="radio-large")
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-large") Large

        div(class="spectrum-Form-item")
          label.spectrum-Form-itemLabel.spectrum-FieldLabel--right Method
          div.spectrum-Form-itemField
            div.spectrum-FieldGroup.spectrum-FieldGroup--vertical
              div.spectrum-Radio(onclick="changeScale(undefined, 'standalone')")
                input.spectrum-Radio-input(type="radio" name="scalingMethod" class="" id="radio-standalone")
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-rem") Standalone
              div.spectrum-Radio(onclick="changeScale(undefined, 'diff')")
                input.spectrum-Radio-input(type="radio" name="scalingMethod" class="" id="radio-diff" checked)
                span.spectrum-Radio-button
                label.spectrum-Radio-label(for="radio-rem") Diff

    section.sdldocs-main-content.row
      .sdldocs-nav.col-sm-3
        nav.box
          each component in document.components
            .row.center-xs.around-xs.start-sm
              .sdldocs-nav-item
                  a.sdldocs-nav-link.box(href='#'+component.slug)= component.name

      .sdldocs-components.col-xs-12.col-sm-8
        each component in document.components
          article.sdldocs-component.box
            a(href=`#${component.slug}`).sdldocs-subtleLink.js-hashtitle
              header.row(id=component.slug)
                .col-xs
                  h2.sdldocs-component-name.spectrum-Heading--pagetitle.box= component.name
            section.sdldocs-component-description.row
              .col-xs
                h2.spectrum-Heading--subtitle1 Design Status: #{component.status}
                p Description: #{component.description}
            section.sdldocs-component-markup.row
              .col-xs-offset-1.col-xs
                .box!= component.markup

            section.sdldocs-component-example.col-xs-12
                .row.end-xs
                  a.sdldocs-code-link.spectrum-Link.box(href="#") show markup
                .row
                  .sdldocs-code-example.box
                    h3.sdldocs-code-example-title.spectrum-Heading--subtitle2 HTML
                    pre.html
                      code(data-language="html")=component.markup

    script(type="text/javascript", src='js/vendor/rainbow-custom.min.js')
    script(type="text/javascript", src='js/vendor/typekit.js')
