{
  "name": "spectrum",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run clean && npm run build-coral && npm run build-bootstrap",
    "clean": "rm -rf dist && mkdir dist",
    "build-bootstrap": "npm run poc-bootstrap-interpolation && npm run poc-bootstrap-extends",
    "build-coral": "npm run poc-coral-interpolation && npm run poc-coral-extends",
    "poc-bootstrap-interpolation": "stylus poc/extends/bootstrap.styl -o dist/bootstrap.extends.css",
    "poc-bootstrap-extends": "stylus poc/interpolation/bootstrap.styl -o dist/bootstrap.interpolation.css",
    "poc-coral-interpolation": "stylus poc/extends/coral.styl -o dist/coral.extends.css",
    "poc-coral-extends": "stylus poc/interpolation/coral.styl -o dist/coral.interpolation.css"
  },
  "bin": {
    "stylus": "./node_modules/.bin/stylus"
  },
  "devDependencies": {
    "stylus": "^0.54.5"
  }
}
