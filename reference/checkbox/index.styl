@import 'abstract/checkbox/index.styl'

.spectrum-Checkbox {
  spectrum-checkbox()
}

.spectrum-Checkbox-checkmark {
  spectrum-checkbox-checkmark()
}

.spectrum-Checkbox-input {
  spectrum-checkbox-input()

  &:checked + .spectrum-Checkbox-checkmark {
    spectrum-checkbox--checked-checkmark()
  }
}

.spectrum-Checkbox[indeterminate] .spectrum-Checkbox-checkmark {
  spectrum-checkbox--indeterminate-checkmark()
}

.spectrum-Checkbox-description {
  spectrum-checkbox-description()
}

@import 'light.styl'
@import 'dark.styl'
