importComponent('dialog')

// The full screen container in which the dialog resides
// Because of this contain, clicks will never fall though when a dialog is visible
.coral-Dialog {
  @extends $spectrum-dialog
}

.coral-Dialog.is-open {
  @extends $spectrum-dialog--open
}

.coral-Dialog-header {
  @extends $spectrum-dialog-header
}

.coral-Dialog-content {
  @extends $spectrum-dialog-content
}

.coral-Dialog-footer {
  @extends $spectrum-dialog-footer

  .coral-Button {
    @extends $spectrum-dialog-footer-button
  }
}

.coral-Dialog-wrapper {
  @extends $spectrum-dialog-wrapper
}

.coral-Dialog-title {
  @extends $spectrum-dialog-title
}

.coral-Dialog-typeIcon {
  @extends $spectrum-dialog-typeIcon
}

.coral-Dialog-closeButton {
  @extends $spectrum-dialog-closeButton
}

.coral-Dialog--fullscreen {
  .coral-Dialog-wrapper {
    @extends $spectrum-dialog--fullscreen-wrapper
  }

  .coral-Dialog-header {
    @extends $spectrum-dialog--fullscreen-header
  }

  .coral-Dialog-typeIcon {
    @extends $spectrum-dialog--fullscreen-typeIcon
  }

  .coral-Dialog-footer,
  .coral-Dialog-header {
    @extends $spectrum-dialog--fullscreen-footer
  }

  .coral-Dialog-content {
    @extends $spectrum-dialog--fullscreen-content
  }
}

@import 'light.styl'
@import 'dark.styl'
