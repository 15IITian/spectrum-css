importComponent('radio')

.spectrum-Radio {
  @extends $spectrum-radio
}

.spectrum-Radio-input {
  @extends $spectrum-radio-input

  &:checked + .spectrum-Radio-checkmark {
    @extends $spectrum-radio--checked-checkmark
  }
}

.spectrum-Radio-description {
  @extends $spectrum-radio-description
}

.spectrum-Radio-checkmark {
  @extends $spectrum-radio-checkmark
}

@import 'light.styl'
@import 'dark.styl'
